<!-- views/posts/show.ejs -->

<%- include('./../partials/head', {title: post.title}); %>


<div class="mx-auto max-w-3xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="w-full">
        <section>
            <div class="overflow-hidden rounded-lg bg-white shadow">
                <div class="p-6">
                    <h1 class="text-xl font-bold"><%= post.title %></h1>
                    <p class="mt-1 text-xs text-gray-500">Posted: <%= moment(post.created_at).fromNow()%></p>
                    <p class="mt-3 text-sm max-w-2xl"><%= post.content %></p>
                </div>
            </div>
        </section>
    </div>
</div>

<div class="mt-8 ml-auto max-w-2xl px-4 sm:px-6 lg:px-8">
    <section>
        <div class="overflow-hidden rounded-lg bg-white shadow">
            <div class="p-6">
                <h1 class="text-lg">Kommentera <%= post.title %></h1>

                <form class="" action="/posts/comments" method="post">
                    <input type="hidden" name="slug" value="<%= post.slug %>">

                    <div class="flex flex-col space-y-4">
                        <!-- <input class="p-5 border-0 bg-slate-100 rounded" type="text" name="title" placeholder="Titel"> -->
                        <textarea class="p-5 border-0 bg-slate-100 rounded" name="content" id="" cols="30" rows="10" placeholder="Ditt inlÃ¤gg"></textarea>
                        <button class="bg-blue-400 text-white py-4" type="submit">Skicka</button>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>

<%- include('./../partials/footer'); %>